<div class="card card-body">
    <h3>Edit Video Idea</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <labbel for="title">Title</labbel>
            <input type="text" name="title" value="{{idea.title}}" required id="title" class="form-control">
        </div>
        <div class="form-group">
            <labbel for="details">Details</labbel>
            <textarea type="text" required name="details" id="details" class="form-control">
                {{idea.details}}
            </textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>